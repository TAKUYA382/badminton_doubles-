<div class="page">
  <div class="page-header">
    <h1 class="page-title">イベント編集</h1>
    <p class="page-sub">イベント情報を修正し、「更新する」を押してください。</p>
  </div>

  <%= form_with model: [:admin, @event], local: true do |f| %>
    <%# 入力エラーがあれば上部に表示 %>
    <% if @event.errors.any? %>
      <div class="card" style="border:1px solid #fca5a5; background:#fee2e2; color:#991b1b; margin-bottom:12px; padding:8px;">
        <strong>入力エラーがあります（<%= @event.errors.count %>件）</strong>
        <ul style="margin-top:6px;">
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card" style="padding:16px; display:flex; flex-wrap:wrap; gap:16px;">
      <div class="field">
        <%= f.label :title, 'タイトル' %><br>
        <%= f.text_field :title, placeholder: "例）学内練習会", style: "width:200px;" %>
      </div>

      <div class="field">
        <%= f.label :date, '日付' %><br>
        <%= f.date_field :date, style: "width:150px;" %>
      </div>

      <div class="field">
        <%= f.label :court_count, 'コート数' %><br>
        <%= f.number_field :court_count, min: 1, step: 1, style: "width:80px;" %>
      </div>
    </div>

    <div style="margin-top:16px;">
      <%= f.submit "更新する", class: "btn btn-primary" %>
      <%= link_to "キャンセル", admin_events_path, class: "btn btn-outline", style: "margin-left:8px;" %>
    </div>
  <% end %>
</div>